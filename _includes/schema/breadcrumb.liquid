<!-- breadcrumb -->
<script type="application/ld+json">
    {
        "@context": "https://schema.org",
        "@type": "BreadcrumbList",
        "itemListElement": [
            {%- assign blocks = page.url | replace_first: "/", "" | split: "/" -%}
            {%- for block in blocks -%}
                {%- capture href -%}
                    {%- if forloop.last -%}
                        {{ page.url }}
                    {%- else -%}
                        {% for block in blocks limit: forloop.index %}{{ block | append: "/" }}{% endfor %}
                    {%- endif -%}
                {%- endcapture -%}
            {
                "@type": "ListItem",
                "position": {{ forloop.index }},
                "name": "{{ block | replace: '.html', '' | capitalize }}",
                "item": "{{ href | absolute_url }}"
            }{% unless forloop.last %},{% endunless %}
            {%- endfor -%}
        ]
    }
</script>
